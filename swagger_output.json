{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Pollar API",
    "description": "REST API for a voting application",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Auth",
      "description": "User authentication"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Endpoint para cadastrar um usuário.",
        "parameters": [],
        "responses": {}
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Endpoint para autenticar um usuário.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/edit/{userId}": {
      "put": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para editar um usuário.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/profile/{userId}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para buscar um usuário.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/polls/all": {
      "get": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para mostrar todas votações de um usuário.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/polls/getPoll/{pollId}": {
      "get": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para buscar uma votações.",
        "parameters": [
          {
            "name": "pollId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/polls/create": {
      "post": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para criar uma votação.",
        "parameters": [],
        "responses": {}
      }
    },
    "/polls/edit/{pollId}": {
      "put": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para editar uma votação.",
        "parameters": [
          {
            "name": "pollId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/polls/delete/{pollId}": {
      "delete": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para deletar uma votação.",
        "parameters": [
          {
            "name": "pollId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/polls/start/{pollId}": {
      "patch": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para abrir uma votação para votos.",
        "parameters": [
          {
            "name": "pollId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/polls/finish/{pollId}": {
      "patch": {
        "tags": [
          "Polls"
        ],
        "description": "Endpoint para fechar uma votação para votos.",
        "parameters": [
          {
            "name": "pollId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    }
