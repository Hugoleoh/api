  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "username": {
          "type": "string",
          "example": "jhonDoe"
        },
        "first_name": {
          "type": "string",
          "example": "Jhon"
        },
        "last_name": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "example": "jhon.doe@email.com"
        },
        "password": {
          "type": "string",
          "example": "secret"
        },
        "cpf": {
          "type": "string",
          "example": "12345678901"
        },
        "activated": {
          "type": "number",
          "example": 1
        }
      }
    }
  }
}